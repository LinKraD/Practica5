<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lt_Dia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.iesseveroochoa.gabrielvidal.practica5.fragments.DiaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3C7A6C"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Fecha" />

                <TextView
                    android:id="@+id/tv_Resumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="Resumen" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_Valoracion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Valoracion" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_Descripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/descripcion_dia" />
    </LinearLayout>

</FrameLayout>